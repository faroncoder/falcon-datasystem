extends ../layout

block content
    h1.
         #{title}
    ul
        - each clip, i in clips
            li
                = clip.identity
                = clip.duration
                = clip.processed
                = clip._id
                form(action='/clips/#{clip._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p 
                    a(href='/clips/#{clip._id}/edit') Edit
                p
                    a(href='/clips/#{clip._id}') Show

